<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:translationY="-1dp"
        android:elevation="2dp"
        app:cardCornerRadius="0dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="1dp">

        <RelativeLayout
            android:id="@+id/yuyue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/schedule_number"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="24dp"
                android:gravity="center_vertical"
                android:textStyle="bold" />


            <View
                android:id="@+id/schedule_line"
                android:layout_width="2dp"
                android:layout_height="28dp"
                android:layout_alignStart="@+id/schedule_number"
                android:layout_marginStart="28dp"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/schedule_title"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignStart="@+id/schedule_line"
                android:layout_marginStart="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/schedule_info"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_alignBottom="@+id/schedule_title"
                android:layout_alignStart="@+id/schedule_line"
                android:layout_marginStart="20dp"
                android:textSize="12sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>